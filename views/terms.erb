<% if @terms %>

    <div class="page-section" id="terms">
        <div class="container">
            <h1>Terms</h1>
            <ul class="avatar-list">
              <% @terms.sort_by { |t| t['start_date'] }.reverse.each do |t| %>
                <li>
                    <a href="<%= term_url(t) %>">
                        <span class="avatar"><i class="fa fa-calendar"></i></span>
                        <span class="label"><%= t['name'] %></span>
                    </a>
                </li>
              <% end %>
            </ul>
        </div>
    </div>

<% else %>

    <div class="hero">
        <div class="container">
            <h1>Oh no!</h1>
            <p>There are no terms in this countryâ€™s dataset.</p>
        </div>
    </div>

    <div class="page-section page-section--grey text-center">
