    <div class="page-section" id="people">
        <div class="container">
            <h1>People</h1>
            <ul>
              <% @people.sort_by { |p| p['name'] }.each do |p| %>
                <li><a href="<%= person_url(p) %>"><%= p['name'] %></a>
              <% end %>
            </ul>
        </div>
    </div>

