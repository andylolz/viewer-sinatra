<div class="container" id="term">
    <h1><% @term['name'] %></h1>
    <p><%= @term['start_date'] %> – <%= @term['end_date'] %></p>

    <ul>
      <% @memberships.sort_by { |m| m['person']['name'] }.each do |m| %>
        <li>
            <a href="<%= person_url(m['person']) %>"><%= m['person']['name'] %></a>
            (<%= m['start_date'] %>–<%= m['end_date'] %>)
        </li>
      <% end %>
    </ul>
</div>
